{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "out"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
